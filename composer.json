{
	"repositories": {
		"wpforms-phpcs": {
			"type": "git",
			"url": "https://github.com/awesomemotive/wpforms-phpcs.git"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"awesomemotive/wpforms-phpcs": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"SUPV\\": "src"
		}
	},
	"scripts": {
		"phpcs": "phpcs --standard=phpcs.xml.dist -s --colors"
	}
}
